alphabet { "←", "→", "↑", "↓" }
states { q0,  q1, q2, q3, q4}
terminal { q3 }
state q1 { "одна → подряд" }
state q2 { "две → подряд" }
state q3 { "две → и одна ↑ подряд найдены - нашли полянку" }
state q4 { "ноль → подряд" }
q0 ---> q1 [ "→" ]
q0 ---> q4 [ "←", "↑", "↓" ]
q1 ---> q2 [ "→" ]
q1 ---> q4 [ "←", "↑", "↓" ]
q2 ---> q2 [ "→" ]
q2 ---> q3 [ "↑" ]
q2 ---> q4 [ "←", "↓" ]
q3 ---> q3 [ "←", "→", "↑", "↓" ]
q4 ---> q1 [ "→" ]
q4 ---> q4 [ "←", "↑", "↓" ]
